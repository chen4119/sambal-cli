{
    "name": "sambal-cli",
    "version": "0.0.10",
    "description": "Sambal CLI tools",
    "main": "dist/src/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/chen4119/sambal-cli"
    },
    "author": "Wan Chun Chen",
    "license": "MIT",
    "keywords": [
        "web components",
        "lit-html",
        "litelement",
        "customElements",
        "static site generator",
        "data partition"
    ],
    "engines": {
        "node": ">=8.0.0"
    },
