{
    "name": "sambal-cli",
    "version": "0.0.1",
    "description": "A static site generator built with web components",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/chen4119/sambal-cli"
    },
    "author": "Wan Chun Chen",
    "license": "MIT",
    "keywords": [
        "web components",
        "lit-html",
        "litelement",
        "customElements",
        "static site generator",
        "data partition"
    ],
    "engines": {
        "node": ">=8.0.0"
    },
    "bin": {
        "sambal": "./bin/sambal"
    },
    "scripts": {
        "start": "npm run serve & npm run watch",
        "build": "rollup -c",
        "generate": "./bin/sambal -g",
        "serve": "polymer serve --port 8081",
        "serve:static": "polymer serve --port 5000 build/esm-bundled",
        "watch": "./bin/sambal -w",
        "polymer": "polymer build"
    },
    "dependencies": {
        "@babel/core": "7.1.5",
        "babel-preset-minify": "0.4.3",
        "commander": "2.19.0",
        "gulp": "4.0.0",
        "gulp-rename": "1.4.0",
        "lodash": "4.17.11",
        "marked": "0.5.2",
        "delete": "1.1.0",
        "through2": "3.0.0",
        "js-yaml": "3.12.0",
        "gray-matter": "4.0.1",
        "shelljs": "0.8.3",
        "sambal": "0.0.2",
        "browser-sync": "2.26.3",
        "rollup": "0.67.0",
        "rollup-plugin-babel": "4.0.3",
        "rollup-plugin-node-resolve": "3.4.0",
        "polymer-cli": "1.9.2",
        "@polymer/app-layout": "3.0.2"
    },
    "devDependencies": {
        "@types/gulp": "4.0.5",
        "@types/node": "10.12.10",
        "@types/shelljs": "0.8.0",
        "@types/through2": "2.0.34",
        "@types/marked": "0.4.2",
        "@types/js-yaml": "3.11.2",
        "@types/lodash": "4.14.118",
        "typescript": "3.1.6",
        "tslib": "1.9.3",
        "tslint": "5.11.0",
        "ts-node": "7.0.1",
        "rollup-plugin-typescript": "1.0.0",
        "rollup-plugin-json": "3.1.0"
    }
}
